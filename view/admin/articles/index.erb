<div class="row grid_8">
  <p>Articles</p>
  <table>
    <thead class="listing-header">
      <th>Title</th>
      <th>URL</th>
      <th>Tags</th>
    </thead>
    <tbody class="listing">
      <% @articles.each do |article| %>
        <tr>
          <td><%= Admin::Articles.a(article.title, :show, article.id) %></td>
          <td><%= anchor(article.url) %></td>
          <td>
            <% article.tags.each do |tag| %>
              <span class="tag"><%= tag.name %></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row grid_3">
  <%= render_partial(:new) %>
</div>

<div class="row grid_12">
  <a href="<%= @bookmarklet.generate(self) %>">Install Bookmarklet</a>
</div>
