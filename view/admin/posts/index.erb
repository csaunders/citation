<div class="row grid_9"></div>
<div class="row grid_2">
  <%= Admin::Posts.a('Add Post', :edit, nil) %>
</div>

<table>
  <thead>
    <th>Title</th>
    <th>Tags</th>
    <th>Published?</th>
    <th></td>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <td><%= Admin::Posts.a(post.title, :show, post.id) %></td>
      <td><%= post.tags %></td>
      <td>
        <% if post.published %>
          published on <%= post.published_at %>
        <% end %>
      </td>
      <td>
    <% end %>
  </tbody>
</table>
